{
  "baseBranches": ["next"],
  "extends": [
    ":autodetectPinVersions",
    ":automergeDisabled",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":ignoreModulesAndTests",
    ":ignoreUnstable",
    ":label(dependencies)",
    ":maintainLockFilesMonthly",
    ":semanticPrefixFixDepsChoreOthers",
    ":separateMajorReleases",
    ":timezone(Europe/Budapest)",
    "schedule:weekends",
    "workarounds:all"
  ],
  "packageRules": [
    {
      "description": "Add `python` label for Pipenv updates.",
      "matchManagers": ["pipenv"],
      "addLabels": ["python"]
    },
    {
      "description": "Add `javascript` label for npm updates and run `npmDedupe` after run.",
      "matchManagers": ["npm"],
      "addLabels": ["javascript"],
      "postUpdateOptions": ["npmDedupe"]
    },
    {
      "description": "Add `docker` label for Dockerfile or docker-compose related updates.",
      "matchManagers": ["docker-compose", "dockerfile"],
      "addLabels": ["docker"]
    },
    {
      "description": "Add `github_actions` label for GitHub Actions related updates.",
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"]
    },
    {
      "description": "Group all minor and patch updates together for npm and Pipenv.",
      "matchManagers": ["npm", "pipenv"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ],
  "rebaseWhen": "conflicted"
}
